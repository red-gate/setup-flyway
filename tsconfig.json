{
  "compilerOptions": {
    "lib": ["es2022"],
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDirs":[ "src", "test" ],
    "newLine": "lf",
    "types": [ "node", "vite/client", "vitest/globals" ],
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports":  true
  },
  "exclude": [ "node_modules", "dist", "vite.config.ts" ]
}
